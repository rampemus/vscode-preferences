{
  "description": "Firefox shortcuts",
  "manipulators": [
    {
      "description": "Switch to next tab",
      "conditions": [
        {
          "bundle_identifiers": ["org.mozilla.firefox"],
          "type": "frontmost_application_if"
        }
      ],
      "from": {
        "key_code": "l",
        "modifiers": { "mandatory": ["command"] }
      },
      "to": {
        "key_code": "tab",
        "modifiers": ["control"]
      },
      "type": "basic"
    },
    {
      "description": "Move tab forward",
      "conditions": [
        {
          "bundle_identifiers": ["org.mozilla.firefox"],
          "type": "frontmost_application_if"
        }
      ],
      "from": {
        "key_code": "l",
        "modifiers": { "mandatory": ["command", "shift"] }
      },
      "to": {
        "key_code": "page_down",
        "modifiers": ["control", "shift"]
      },
      "type": "basic"
    },
    {
      "description": "Switch to previous tab",
      "conditions": [
        {
          "bundle_identifiers": ["org.mozilla.firefox"],
          "type": "frontmost_application_if"
        }
      ],
      "from": {
        "key_code": "h",
        "modifiers": { "mandatory": ["command"] }
      },
      "to": {
        "key_code": "tab",
        "modifiers": ["control", "shift"]
      },
      "type": "basic"
    },
    {
      "description": "Move tab backward",
      "conditions": [
        {
          "bundle_identifiers": ["org.mozilla.firefox"],
          "type": "frontmost_application_if"
        }
      ],
      "from": {
        "key_code": "h",
        "modifiers": { "mandatory": ["command", "shift"] }
      },
      "to": {
        "key_code": "page_up",
        "modifiers": ["control", "shift"]
      },
      "type": "basic"
    },
    {
      "description": "Show history",
      "conditions": [
        {
          "bundle_identifiers": ["org.mozilla.firefox"],
          "type": "frontmost_application_if"
        }
      ],
      "from": {
        "key_code": "p",
        "modifiers": { "mandatory": ["command"] }
      },
      "to": {
        "key_code": "h",
        "modifiers": ["command"]
      },
      "type": "basic"
    },
    {
      "description": "Scroll down",
      "conditions": [
        {
          "bundle_identifiers": ["org.mozilla.firefox"],
          "type": "frontmost_application_if"
        }
      ],
      "from": {
        "key_code": "d",
        "modifiers": { "mandatory": ["control"] }
      },
      "to": { "key_code": "spacebar" },
      "type": "basic"
    },
    {
      "description": "Scroll up",
      "conditions": [
        {
          "bundle_identifiers": ["org.mozilla.firefox"],
          "type": "frontmost_application_if"
        }
      ],
      "from": {
        "key_code": "u",
        "modifiers": { "mandatory": ["control"] }
      },
      "to": {
        "key_code": "spacebar",
        "modifiers": ["shift"]
      },
      "type": "basic"
    },
    {
      "description": "Reload page",
      "conditions": [
        {
          "bundle_identifiers": ["org.mozilla.firefox"],
          "type": "frontmost_application_if"
        }
      ],
      "from": {
        "key_code": "c",
        "modifiers": { "mandatory": ["control"] }
      },
      "to": {
        "key_code": "r",
        "modifiers": ["command"]
      },
      "type": "basic"
    },
    {
      "description": "Force reload page",
      "conditions": [
        {
          "bundle_identifiers": ["org.mozilla.firefox"],
          "type": "frontmost_application_if"
        }
      ],
      "from": {
        "key_code": "c",
        "modifiers": { "mandatory": ["control", "shift"] }
      },
      "to": {
        "key_code": "r",
        "modifiers": ["command", "shift"]
      },
      "type": "basic"
    }
  ]
}

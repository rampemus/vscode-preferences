{
  "description": "Firefox shortcuts",
  "manipulators": [
    {
      "conditions": [
        {
          "bundle_identifiers": [
            "org.mozilla.firefox"
          ],
          "type": "frontmost_application_if"
        }
      ],
      "from": {
        "key_code": "l",
        "modifiers": { "mandatory": ["command"] }
      },
      "to": {
        "key_code": "tab",
        "modifiers": ["control"]
      },
      "type": "basic"
    },

{
    "editor.wordWrap": "on",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "search.searchOnTypeDebouncePeriod": 600,
    "search.showLineNumbers": true,
    "editor.rulers": [80],
    "files.eol": "\n",

    "atomKeymap.promptV3Features": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "git.confirmSync": false,
    "git.autofetch": true,
    "explorer.confirmDelete": false,
    "editor.scrollBeyondLastLine": false,
    "terminal.integrated.rendererType": "dom",
    "editor.minimap.enabled": false,
    "workbench.colorTheme": "One Dark Pro",
    "workbench.tree.indent": 14,
    "workbench.tree.renderIndentGuides": "always",
    "diffEditor.ignoreTrimWhitespace": false,
    "explorer.confirmDragAndDrop": false,
    "task.slowProviderWarning": ["typescript"],
    "task.autoDetect": "off",
    "editor.occurrencesHighlight": "off",
    "editor.gotoLocation.multipleDefinitions": "goto",
    "editor.gotoLocation.multipleImplementations": "goto",
    "workbench.list.automaticKeyboardNavigation": false,

    // Remove all sticky scrolls
    "workbench.tree.enableStickyScroll": false,
    "editor.stickyScroll.scrollWithEditor": false,
    "editor.stickyScroll.enabled": false,

    "search.exclude": {
        "**.sql": true,
        "**/build/**": true,
        "**/dist/**": true,
        "**/node_modules": false
    },
    "editor.autoClosingOvertype": "always",
    "editor.autoClosingQuotes": "always",
    "[typescriptreact]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "editor.tokenColorCustomizations": {
        "comments": "#a14646"
    },
    "typescript.preferences.quoteStyle": "single",
    "javascript.preferences.quoteStyle": "single",

    // Git lense
    "gitlens.codeLens.enabled": false,
    "gitlens.codeLens.authors.enabled": false,
    "gitlens.blame.format": "${author|4} ${message|30?} ${agoOrDate|14-}",
    "gitlens.blame.highlight.locations": ["overview", "line", "gutter"],
    "gitlens.currentLine.enabled": false,
    "gitlens.heatmap.toggleMode": "window",
    "gitlens.heatmap.locations": ["gutter"],

    "gitlens.changes.toggleMode": "window",
    "gitlens.changes.locations": ["overview", "gutter"],
    "gitlens.blame.toggleMode": "window",

    "vscode-neovim.neovimInitVimPaths.darwin": "~/.settings/config/init.vim",
    "vscode-neovim.neovimExecutablePaths.darwin": "/usr/local/bin/nvim",
    "editor.cursorSurroundingLines": 5,
    "subtleBrackets.style": {
        "borderStyle": "solid",
        "borderColor": "#666",
        "borderRadius": "6px"
    },
    "intelephense.stubs": [
        "apache",
        "bcmath",
        "bz2",
        "calendar",
        "com_dotnet",
        "Core",
        "ctype",
        "curl",
        "date",
        "dba",
        "dom",
        "enchant",
        "exif",
        "FFI",
        "fileinfo",
        "filter",
        "fpm",
        "ftp",
        "gd",
        "gettext",
        "gmp",
        "hash",
        "iconv",
        "imap",
        "intl",
        "json",
        "ldap",
        "libxml",
        "mbstring",
        "meta",
        "mysqli",
        "oci8",
        "odbc",
        "openssl",
        "pcntl",
        "pcre",
        "PDO",
        "pdo_ibm",
        "pdo_mysql",
        "pdo_pgsql",
        "pdo_sqlite",
        "pgsql",
        "Phar",
        "posix",
        "pspell",
        "readline",
        "Reflection",
        "session",
        "shmop",
        "SimpleXML",
        "snmp",
        "soap",
        "sockets",
        "sodium",
        "SPL",
        "sqlite3",
        "standard",
        "superglobals",
        "sysvmsg",
        "sysvsem",
        "sysvshm",
        "tidy",
        "tokenizer",
        "xml",
        "xmlreader",
        "xmlrpc",
        "xmlwriter",
        "xsl",
        "Zend OPcache",
        "zip",
        "zlib",
        "wordpress"
    ],
    "javascript.updateImportsOnFileMove.enabled": "always",
    "extensions.ignoreRecommendations": true,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.quickSuggestions": {
        "strings": true
    },

    "phpcbf.executablePath": "/home/mysteerio/.config/composer/vendor/bin/phpcbf",
    "[php]": {
        "editor.defaultFormatter": "persoderlind.vscode-phpcbf"
    },
    "postcss.validate": false,
    "files.exclude": {
        "**/.next": true,
        "**/vendor": true
    },
    "editor.autoClosingBrackets": "always",
    "terminal.integrated.scrollback": 10000,
    "editor.inlineSuggest.enabled": true,
    "yaml.maxItemsComputed": 10000,
    "json.maxItemsComputed": 10000,
    "github.copilot.enable": {
        "*": true,
        "plaintext": true,
        "markdown": true,
        "scminput": false,
        "yaml": true,
        "json": true,
        "ini": false
    },
    "[svg]": {
        "editor.defaultFormatter": "jock.svg"
    },
    "prettier.printWidth": 120,
    "eslint.hideErrorPrefix": true,
    "zenMode.hideLineNumbers": false,
    "zenMode.centerLayout": false,
    "zenMode.fullScreen": false,
    "zenMode.silentNotifications": false,
    "zenMode.hideStatusBar": false,

    // Autocomplete like in coc.nvim
    "editor.acceptSuggestionOnCommitCharacter": false,
    "emmet.showExpandedAbbreviation": "inMarkupAndStylesheetFilesOnly",

    // GraphQL
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,

    // Vue related things
    "vetur.useWorkspaceDependencies": true,
    "vetur.ignoreProjectWarning": true,
    "path-intellisense.mappings": {
        "@": "${workspaceFolder}"
    },
    "terminal.integrated.fontFamily": "Menlo, Hack Nerd Font Mono",
    "editor.fontFamily": "Menlo, Hack Nerd Font Mono, Monaco, 'Courier New', monospace",
    "editor.bracketPairColorization.enabled": false,
    "editor.guides.highlightActiveIndentation": false,
    "editor.accessibilitySupport": "off",
    "color-highlight.matchWords": true,
    "color-highlight.markRuler": false,
    "git.mergeEditor": false,
    "git.ignoreRebaseWarning": true,
    "autoHide.autoHideSideBar": true,
    "editor.matchBrackets": "never",
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "window.zoomLevel": 2,
    "workbench.list.typeNavigationMode": "trigger",
}
